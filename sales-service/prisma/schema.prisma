generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sale {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int
  totalPrice Float
  merchantId String      @default("1")
  commission Float    @default(0.0)
  status     String   @default("PENDING") // PENDING, COMPLETED, FAILED (Payment status)
  orderStatus String  @default("ORDERED") // ORDERED, SHIPPING, DELIVERED, COMPLETED (Delivery status)
  mvolaNumber String?
  createdAt DateTime @default(now())
}
